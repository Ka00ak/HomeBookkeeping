<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/rgroup_transaction_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Доход"/>

        <RadioButton
            android:id="@+id/rbtn_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Расход"/>

    </RadioGroup>

    <TextView
        android:id="@+id/tv_transaction_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дата"/>

    <Button
        android:id="@+id/btn_transaction_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01.01.2018"/>

    <TextView
        android:id="@+id/tv_transaction_account_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Счёт"/>

    <Spinner
        android:id="@+id/spinner_transaction_account_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_transaction_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сумма"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_transaction_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="300.00"/>

        <Spinner
            android:id="@+id/spinner_transaction_currency"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="2"
            android:entries="@array/currencies"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_transaction_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Комментарий"/>

    <EditText
        android:id="@+id/et_transaction_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Перевод денег"/>

</LinearLayout>